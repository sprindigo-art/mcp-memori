# MCP Memory Server Configuration
# Copy ini ke .env dan sesuaikan

# Database: jika POSTGRES_URL diset dan valid, gunakan Postgres. Jika tidak, fallback ke SQLite.
# Format: postgresql://user:password@host:port/database
POSTGRES_URL=

# SQLite path (digunakan jika Postgres tidak tersedia)
SQLITE_PATH=./data/memory.db

# Embedding mode: local | disabled
# - local: gunakan ollama jika tersedia
# - disabled: keyword-only search
EMBEDDING_MODE=disabled

# Ollama endpoint (jika EMBEDDING_MODE=local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text

# MCP Server
MCP_PORT=3100
MCP_HOST=localhost

# Logging
LOG_LEVEL=info

# Tenant/Project defaults
DEFAULT_TENANT=local-user
DEFAULT_PROJECT=default
