    "node": ">=18.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "pg": "^8.13.1",
    "uuid": "^11.0.3"
  }
