{
  "name": "mcp-memori",
  "version": "1.0.0",
  "description": "Production-grade MCP Memory Server dengan hybrid search, self-healing, dan concurrency-safe untuk multi-agent AI",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "db:migrate": "node src/db/migrate.js",
